@model DBank.Application.Customers.Queries.GetCustomersList.CustomersListViewModel
<div class="flex flex-column">
    <h1>Customers</h1>
    <div class="container tableFixHead">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Customer number</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                </tr>
            </thead>
            <tbody >
                @{
                    var count = 1;
                    foreach (var c in Model.Customers)
                    {
                        <tr>
                            <td scope="row">@count</td>
                            <td>@c.Id</td>
                            <td>@c.Fullname</td>
                            <td>@c.Emailaddress</td>
                        </tr>
                        count++;
                    }
                }
            </tbody>
        </table>

    </div>
    <div class="container justify-content-center">
        <button class="btn btn-primary my-2" type="submit">Next page</button>
    </div>
</div>