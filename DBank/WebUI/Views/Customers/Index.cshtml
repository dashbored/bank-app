                        <thead>
                            <tr>
                                <th class="text-center">
                                    Id
                                </th>
                                <th class="text-center">
                                    Belopp
                                </th>
                                <th class="text-center">
                                    Summa
                                </th>
                            </tr>
                        </thead>
