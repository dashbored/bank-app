    <div id="_customerImageDetail">
        <div class="row justify-content-center">
            <div class="col-5">

            </div>
            <div class="col">
                <h1 class="my-2 font-weight-bold text-center">Customer: @Model.Id</h1>
                <div class="my-4">
                    <h4><span class="font-weight-bold">Name:</span> @Model.Fullname</h4>
                    <h4><span class="font-weight-bold">Personal number:</span> @Model.NationalId</h4>
